! rxvt-unicode terminal settings
!
! Font settings and terminal colours 
URxvt.font: xft:SauceCodePro Nerd Font Mono:size=14
URxvt.background: black
URxvt.foreground: #cccccc
URxvt.cursorColor: #ff0000
! Scrollbar settings
URxvt.thickness: 10
URxvt.troughColor: #660000
URxvt.scrollColor: #b30000
URxvt.scrollBar_right: True
URxvt.print-pipe: "cat > /dev/null"
! Scrolling/buffer settings
URxvt.saveLines: 5000
URxvt.mouseWheelScrollPage: True
